<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@Page.FullTitle</title>
    <link rel="stylesheet" href="~/css/Main.css" asp-append-version="true" />
</head>
<body>

    <nav class="navbar" role="navigation" aria-label="main navigation">
        <div class="navbar-brand">
            <a class="navbar-item" href="/">
                @if (Page.CurrentLanguage.Key._IsSamei("ja"))
                {
                    <img src="~/images/logo_ja.jpg" width="318" height="28" asp-append-version="true">
                }
                else
                {
                    <img src="~/images/logo_en.jpg" width="318" height="28" asp-append-version="true">
                }
            </a>
            <div class="navbar-item">
                <div class="buttons">
                    <a class="button is-link" style="font-weight: bold" href="/"><i class="fas fa-laptop"></i>&nbsp;ボタン 1</a>
                    <a class="button is-warning is-light" style="font-weight: bold" href="/" target="_blank"><i class="far fa-question-circle"></i>&nbsp;ボタン 2</a>
                    <a class="button is-info is-light" style="font-weight: bold" href="@Page.Stb["WEBAPP_LINK_URL"]" target="_blank"><i class="fas fa-globe"></i>&nbsp;リンク 1</a>
                    <div class="select">
                        <select class="input is-info" onChange="location.href = value;" asp-items="Page.GetLanguageSelectHtmlBox(this.Context.Request.GetDisplayUrl()._ParseUrl())"></select>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <div class="container is-fluid">
        <p>　</p>
        @RenderBody()
        <p>　</p>
    </div>

    <footer class="footer">
        <div class="content has-text-left">
            <p><a href="/">@Page.SiteName <stb>WEBAPP_TOP</stb></a> | <a href="@Page.Stb["WEBAPP_LINK_URL"]"><stb>WEBAPP_LINK_STR</stb></a> | <a href="https://www.apache.org/licenses/LICENSE-2.0"><stb>THINWEB_FOOTER_TERMS</stb></a> | <a href="/js/bundle.js.LICENSE.txt"><stb>WEBAPP_FOOTER_OSS</stb> 1</a>, <a href="@Page.Stb["WEBAPP_FOOTER_OSS_2_LINK"]">2</a><br>Copyright &copy; 2020-@Env.BuildTimeStamp.Year.ToString() <stb>WEBAPP_FOOTER_COPYRIGHT</stb><br>Version: App=@IPA.Cores.Basic.Dbg.GetCurrentGitCommitId(), CoresLib=@IPA.Cores.Basic.Dbg.GetCurrentCoresLibGitCommitId()</p><br>
        </div>
    </footer>

    <script src="~/js/strtable.js" asp-append-version="true"></script>
    <script src="~/js/bundle.js" asp-append-version="true"></script>
    <script>Main.Cores_InitJavaScriptWithPageContext("@Page.GetJavaScriptInitContext()._ObjectToJson()._JavaScriptSafeStrEncode()")</script>

    @RenderSection("Scripts", required: false)

</body>
</html>
